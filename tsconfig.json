{
  "compilerOptions": {
    "target": "es5",
    "rootDir": ".",
    "outDir": "build",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "*": [
        "*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "index.ts",
    "src/*.ts",
    "src/**/*.ts",
    "test/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
